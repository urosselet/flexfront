{
    "extends": [
        "tslint:recommended"
    ],
    "rulesDirectory": [
        "node_modules/codelyzer"
    ],
    "rules": {
        "import-spacing": false,
        "trailing-comma": [false, {"multiline": "always", "singleline": "never" }],
        "interface-name": [false, "always-prefix"],
        "component-class-suffix": true,
        "directive-class-suffix": true,
        "import-destructuring-spacing": true,
        "invoke-injectable": true,
        "no-access-missing-member": true,
        "no-attribute-parameter-decorator": true,
        "no-forward-ref": true,
        "no-input-rename": true,
        "no-output-rename": true,
        "pipe-naming": [true, "camelCase"],
        "templates-use-public": true,
        "use-input-property-decorator": true,
        "use-life-cycle-interface": true,
        "use-output-property-decorator": true,
        "use-pipe-transform-interface": true,
        "use-host-property-decorator": false,
        "no-console": [true, "time", "timeEnd", "trace"],
        "max-line-length": [false, 100],
        "no-string-literal": false,
        "no-empty": false,
        // "no-use-before-declare": true,
        "object-literal-sort-keys": false,
        "ordered-imports": false,
        "object-literal-key-quotes": [false, "as-needed"],
        "quotemark": [true, "single", "avoid-escape"],
        "variable-name": [
            true,
            "allow-leading-underscore",
            "allow-pascal-case",
            "ban-keywords",
            "check-format"
        ]
    }
}